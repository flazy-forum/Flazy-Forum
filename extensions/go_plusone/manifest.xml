<extension engine="1.0">
  <id>go_plusone</id>
  <title>Google +1</title>
  <version>1.0</version>
  <description>Adds a simbple Google +1 button for sharing your posts.</description>
  <author>Flazy Development Team</author>
  <minversion>0.0.1</minversion>
  <maxtestedon>0.0.1</maxtestedon>
  <hooks>

    <hook id="hd_head"><![CDATA[
	$forum_head['js_googleplus'] = '<script type="text/javascript" src="https://apis.google.com/js/plusone.js">{lang: \'bg\'}</script>';
    ]]></hook>

    <hook id="vt_row_pre_display"><![CDATA[
	$forum_page['post_ident']['googleplus_button'] = '<span class="post-num"><g:plusone size="small"></g:plusone></span>';
    ]]></hook>

  </hooks>
</extension>